<style>
  th { text-align: left;}
  .odd { background-color: #eeeeee;}
  .even {background-color: #bebebe;}
</style>

<table>
  <tr>
    <td><%= link_to "New Course", new_course_path %></td>
  <tr>
    <th>Course Number</th>
    <th>Course Name</th>
    <th>Updated</th>
    <th>Functions</th>
  </tr>
  <% @courses.each_with_index do |course, i| %>
  <tr>
    <td class=<%= @get_class.call(i) %>><%= course.subject%> <%= course.course_id %></td>
    <td class=<%= @get_class.call(i) %>><%= course.name %></td>
    <td class=<%= @get_class.call(i) %>><%= course.updated_at %></td>
    <td class=<%= @get_class.call(i) %>><%= link_to "Edit", edit_course_path(course) %>
        <%= link_to "Delete", course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete this course?"} %>
    </td>
  </tr>
  <% end %>
</table>