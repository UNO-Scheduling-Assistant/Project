<% if false %>
<table class="list-table">
  <tr>
    <td><%= link_to "New Course", new_course_path %></td>
  <tr class="table-heading">
    <th>Course Number</th>
    <th>Course Name</th>
    <th>Updated</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @courses.each_with_index do |course, i| %>
  <tr class=<%= @get_class.call(i) %>>
    <td><%= course.subject%> <%= course.course_id %></td>
    <td><%= course.name %></td>
    <td><%= course.updated_at %></td>
    <td><%= link_to "Edit", edit_course_path(course) %></td>
    <td>
        <%= link_to "Delete", course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete this course?"} %>
    </td>
  </tr>
  <% end %>
</table>
<%end%>

<%= link_to "New Course", new_course_path %>
<% @courses.each do |course| %>

<div class="course-container">
  <div class="course-info">
    <div class="subject-catalog">
      <%= course.subject %> <%= course.course_id %>
    </div>
    <div class="course-name">
      <%= course.name %>
    </div>
    <div class="course-options">
      <%= link_to "Edit", edit_course_path(course) %>
      <%= link_to "Delete", course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete this course?"} %>
    </div>
  </div>
  <div class="sections-container">
    <% course.sections.each_with_index do |section, i| %>
      <div class="section-row full">
        <div id="sec-id-row" class="inblk full mbot">
          <div class="allt half lmargin">
            Section: <%= course.subject %> <%= course.course_id %>-<%= sprintf("%03d", section.sec_id) %>
          </div>
          <div class="alrt half rmargin rtalign">
            Description: <%= section.sec_description %>
          </div>
        </div>
        <div id="room-time-row" class="inblk full mbot">
          <div id="col-room" class="allt quart lmargin">
            Room: <%= section.section_setting.room.building %> <%= section.section_setting.room.room_num %>
          </div>
          <div id="col-time" class="allt quart">
            Time: <%= section.section_setting.time_slot.days %> <%= section.section_setting.time_slot.start_time %> to <%= section.section_setting.time_slot.end_time %>
          </div>
          <div id="col-inst" class="alrt half rmargin rtalign">
            Instructor: <%= section.section_setting.instructor.first_name %> <%= section.section_setting.instructor.last_name %>
          </div>
        </div>
        <div id="seats-row" class="inblk full mbot">
          <div id="col-seats" class="allt quart lmargin">
            Seats: <%= section.sec_capacity %>
          </div>
        </div>
      </div>
      <div class="section-divider"></div>
    <% end %>
  </div>
</div>

<% end %>